<div class="center page-header">
  <h2>Question <%= @question.id %>: <%= @question.description %></h2>
</div>
<div class="well col-xs-8 col-xs-offset-2">
  <table class="table table-bordered table-striped table-hover table-condensed">
    <th class="success text-center">Answer</th>
    <th class="success text-center">One</th>
    <th class="success text-center">Two</th>
    <th class="success text-center">Three</th>
    <tr>
      <td class="active data"> <%= @question.answer %> </td>
      <td class="active data"> <%= @question.one %> </td>
      <td class="active data"> <%= @question.two %> </td>
      <td class="active data"> <%= @question.three %> </td>
    </tr>
  </table>
</div>
