<% @page_title = "Create Question" %>
<div class="center page-header">
  <h2>Create Question</h2>
</div>
	<%= form_for(@question, :url=> questions_path, :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_field :description, class: 'form-control', placeholder: 'Write question description', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :answer, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_field :answer, class: 'form-control', placeholder: 'Write answer', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :one, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_field :one, class: 'form-control', placeholder: 'Enter other choice', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :two, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_field :two, class: 'form-control', placeholder: 'Enter other choice', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :three, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_field :three, class: 'form-control', placeholder: 'Enter other choice', autofocus: true %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Create Question", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
	<% end %>
